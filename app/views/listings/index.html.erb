<br>
<h1 class = "hero-title text-center text-teal"><em>Decoro Listings</em></h1>
<br>
<%= form_tag listings_path, method: :get, class:"form-inline  my-2 my-lg-o" do %>
  <span class="input-group-btn">
  <%= submit_tag "Search", class: 'btn btn-info'%>
  </span>
<%= text_field_tag :search, params[:search], placeholder: "Search by Name", class:"form-control mr-sm-2"%>
<%end%>
<div class = "container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <%@listings.each do |listing|%>
      <div class="col mb-4">
        <div class="card border-info mb-3 h-100">
        <%if listing.picture.attached?%>
          <%=image_tag listing.picture, class: "thumbnail card-top"%>
        <%else%>
          <%=image_tag "hero_img.jpg", alt: "Decor Items image", class:"img-fluid"%>
        <%end%>
          <div class="card-body">
            <h5 class="card-title"><%=listing.name%></h5>
            <p class="card-text text-secondary text-truncate"><%=listing.description%></p>
            <div class="d-flex justify-content-between">
              <%=link_to "See More", listing_path(listing.id), class: "btn btn-outline-info stretched-link" %>
              <h5> $ <%=price_to_dollars(listing.price)%></h5>
            </div>
          </div>
          <div class="card-footer">
            <small class="text-muted">Added <%=time_ago_in_words(listing.created_at)%> ago </small>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>