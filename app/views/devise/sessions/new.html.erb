<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">
      <br>

      <h2 class = "hero-title text-center text-teal">Log in</h2>
      <br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.label :login %><br />
            <%= f.text_field :login, autofocus: true, class:"form-control text" %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-info" %>
          </div>
        <% end %>
      <%= render "devise/shared/links"%>
    </div>
  </div>
</div>